    "scripts": {
        "start": "node server.js",
        "server": "nodemon server.js",
        "client": "cd ../client && npm start",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "client:install": "cd ../client && npm install --legacy-peer-deps",
        "client:build": "cd ../client && npm run build",
        "heroku-postbuild": "npm run client:install && npm run client:build",
        "migrate:apartments": "node migrations/20240101_update_apartment_schema.js",
        "migrate:apartment-photos": "node migrations/20240102_add_apartment_photos.js",
        "migrate:workers": "node scripts/run-migration.js",
        "migrate:workorders": "node migrations/20240901_update_workorder_schema.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.41.3",
        "colors": "^1.4.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^6.7.0",
        "express-validator": "^6.14.2",
        "helmet": "^6.0.1",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^8.5.1",
