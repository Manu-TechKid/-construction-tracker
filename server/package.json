{
    "name": "server",
    "version": "1.0.1",
    "main": "server.js",
    "private": true,
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
        "test:watch": "cross-env NODE_ENV=test jest --watch --detectOpenHandles --forceExit",
        "test:coverage": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
        "build": "echo \"Server build complete\"",
        "build:client": "cd ../client && npm install --legacy-peer-deps && npm run build"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.41.3",
        "colors": "^1.4.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^6.7.0",
        "express-validator": "^6.14.2",
        "helmet": "^6.0.1",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^7.6.3",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.5",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^10.2.0",
        "nodemon": "^2.0.22",
        "supertest": "^6.3.4"
    }
}
