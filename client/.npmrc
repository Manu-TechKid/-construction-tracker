# Prevent package-lock.json from being generated
package-lock=false

# Use legacy peer deps to avoid installation issues
legacy-peer-deps=true

# Set registry to public npm registry
registry=https://registry.npmjs.org/

# Disable package-lock.json generation
package-lock=false

# Increase network timeout to 10 minutes
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=5

# Disable package-lock generation
package-lock=false
