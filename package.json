{
  "name": "construction-tracker",
  "version": "1.0.0",
  "description": "A comprehensive construction management application",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "start": "cd server && node server.js",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm install && npm run build",
    "install:all": "npm install --legacy-peer-deps && cd client && npm install && cd ../server && npm install",
    "heroku-postbuild": "npm run build",
    "render-build": "cd server && npm run build:client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Manu-TechKid/-construction-tracker.git"
  },
  "keywords": [
    "construction",
    "management",
    "tracking",
    "react",
    "node",
    "mongodb"
  ],
  "author": "Manu-TechKid",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Manu-TechKid/-construction-tracker/issues"
  },
  "homepage": "https://github.com/Manu-TechKid/-construction-tracker#readme",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
